# DevSEO Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=DevSEO
APP_VERSION=1.0.0
DEBUG=True
API_V1_PREFIX=/api/v1

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string (required)
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/devseo

# ===========================================
# AUTHENTICATION (Clerk)
# ===========================================
# Get these from: https://dashboard.clerk.com
CLERK_SECRET_KEY=sk_test_...
CLERK_PUBLISHABLE_KEY=pk_test_...

# Frontend URL for Clerk redirects
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/register
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ===========================================
# EMAIL (SendGrid)
# ===========================================
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@devseo.io
SENDGRID_FROM_NAME=DevSEO

# ===========================================
# REDIS (for caching and Celery)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# CORS
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://devseo.io

# ===========================================
# ERROR TRACKING (Sentry - Optional)
# ===========================================
# Get DSN from: https://sentry.io
SENTRY_DSN=

# ===========================================
# AI SERVICES (Optional)
# ===========================================
# OpenAI for advanced content analysis (optional)
OPENAI_API_KEY=sk-...

# ===========================================
# PAYMENT PROCESSING (Optional - for production)
# ===========================================
# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Lemon Squeezy (alternative to Stripe)
LEMON_SQUEEZY_API_KEY=
LEMON_SQUEEZY_STORE_ID=
LEMON_SQUEEZY_WEBHOOK_SECRET=

# ===========================================
# SEO TOOLS INTEGRATIONS (Optional)
# ===========================================
# DataForSEO for keyword rank tracking
DATAFORSEO_LOGIN=
DATAFORSEO_PASSWORD=

# ===========================================
# AWS S3 (for file storage - Optional)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=devseo-uploads

# ===========================================
# DEPLOYMENT
# ===========================================
# Port for backend server (Railway/Render will override)
PORT=8000

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# ===========================================
# DEVELOPMENT ONLY
# ===========================================
# Set to False in production
RELOAD=True
LOG_LEVEL=debug
